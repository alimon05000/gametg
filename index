<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Игра Тап</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css"> <!-- Подключение стилей -->
</head>
<body>
    <div id="game-container">
        <h1>Игра Тап</h1>
        <h2>Прочитай: "Хвала Аллаху"</h2>
        <p>Очки: <span id="score">0</span></p>
        <button id="tap-btn" class="btn">Нажми здесь!</button>
        <button id="reset-btn" class="btn">Сбросить</button>
    </div>

    <script>
        let score = 0;
        const scoreDisplay = document.getElementById('score');
        const tapBtn = document.getElementById('tap-btn');
        const resetBtn = document.getElementById('reset-btn');

        gsap.from("#game-container", {duration: 1, scale: 0, ease: "elastic"});

        tapBtn.addEventListener('click', () => {
            score++;
            scoreDisplay.textContent = score;
            gsap.to("#score", {duration: 0.3, scale: 1.5, yoyo: true, repeat: 1});
        });

        resetBtn.addEventListener('click', () => {
            score = 0;
            scoreDisplay.textContent = score;
        });
    </script>
</body>
</html>
